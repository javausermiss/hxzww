<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AppVersionMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_APP_VERSION
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		DOWNLOAD_URL,	
		CONTENT,	
		VERSION,
		CREATE_TIME,
		STATE,
		APPVERSION_ID,
		FLAG
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DOWNLOAD_URL},	
		#{CONTENT},	
		#{VERSION},
		#{CREATE_TIME},
		#{STATE},
		#{APPVERSION_ID},
		#{FLAG}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"/>
		(
	<include refid="Field"/>
		) values (
	<include refid="FieldValue"/>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			APPVERSION_ID = #{APPVERSION_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DOWNLOAD_URL = #{DOWNLOAD_URL},
			CONTENT = #{CONTENT},
			VERSION = #{VERSION},
			STATE = #{STATE},
			FLAG = #{FLAG},
			CREATE_TIME = now()
		where 
		APPVERSION_ID = #{APPVERSION_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			APPVERSION_ID = #{APPVERSION_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			APPVERSION_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>


	<select id="getNewVersion" resultType="com.fh.entity.system.AppVersion">
		SELECT
		tb_app_version.APPVERSION_ID,
		tb_app_version.DOWNLOAD_URL,
		tb_app_version.CONTENT,
		tb_app_version.STATE,
		tb_app_version.VERSION,
		tb_app_version.CREATE_TIME,
		tb_app_version.UPDATE_TIME,
		tb_app_version.FLAG
		FROM
		tb_app_version
		WHERE
		tb_app_version.STATE = '1'
		ORDER BY
		tb_app_version.CREATE_TIME DESC
		LIMIT 0, 1
	</select>
	
	
	 <select id="getVersionByID" parameterType="String" resultType="com.fh.entity.system.AppVersion">
        SELECT
        <include refid="Field"></include>
        FROM
        <include refid="tableName"/>
        where 
		APPVERSION_ID = #{APPVERSION_ID}
    </select>
    
	
	
	<!-- 通过版本获取数据 -->
	<select id="findByVersion" parameterType="String" resultType="com.fh.entity.system.AppVersion">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VERSION = #{VERSION}
	</select>

</mapper>