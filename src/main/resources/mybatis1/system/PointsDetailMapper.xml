<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PointsDetailMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_POINTSDETAIL
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		USERID,	
		CHANNEL,	
		POINTSVALUE,	
		TYPE,	
		CREATETIME,	
		POINTSDETAIL_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{USERID},	
		#{CHANNEL},	
		#{POINTSVALUE},	
		#{TYPE},	
		#{CREATETIME},	
		#{POINTSDETAIL_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			POINTSDETAIL_ID = #{POINTSDETAIL_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			USERID = #{USERID},
			CHANNEL = #{CHANNEL},
			POINTSVALUE = #{POINTSVALUE},
			TYPE = #{TYPE},
			CREATETIME = #{CREATETIME},
		POINTSDETAIL_ID = POINTSDETAIL_ID
		where 
		POINTSDETAIL_ID = #{POINTSDETAIL_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			POINTSDETAIL_ID = #{POINTSDETAIL_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		ORDER BY CREATETIME DESC
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			POINTSDETAIL_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>


	<insert id="regPointsDetail" parameterType="com.fh.entity.system.PointsDetail">
		insert into
		<include refid="tableName"></include>
		(
		USERID,
		CHANNEL,
		POINTSVALUE,
		TYPE,
		CREATETIME,
		POINTSDETAIL_ID
		)
		values
		(
		#{userId},
		#{channel},
		#{pointsValue},
		#{type},
		now(),
		#{pointsDetail_Id}
		)

	</insert>

	<select id="getPointsDetail" parameterType="String" resultType="com.fh.entity.system.PointsDetail">
		select
		USERID,
		CHANNEL,
		POINTSVALUE,
		TYPE,
		DATE_FORMAT(CREATETIME,'%Y-%m-%d %H:%i:%s') as CREATETIME,
		POINTSDETAIL_ID
		from
		<include refid="tableName"></include>
		where
		userId = #{userId}
		order
		BY
		CREATETIME
		desc
	</select>

</mapper>