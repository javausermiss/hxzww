<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AppuserLoginInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_APPUSER_LOGIN
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		LOGIN_PHONE_TYPE,	
		LOGIN_IP,	
		USER_ID,	
		LOGIN_TIME,	
		APPUSERLOGININFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{LOGIN_PHONE_TYPE},	
		#{LOGIN_IP},	
		#{USER_ID},	
		#{LOGIN_TIME},	
		#{APPUSERLOGININFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			APPUSERLOGININFO_ID = #{APPUSERLOGININFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			LOGIN_PHONE_TYPE = #{LOGIN_PHONE_TYPE},
			LOGIN_IP = #{LOGIN_IP},
			USER_ID = #{USER_ID},
			LOGOUT_TIME = #{LOGOUT_TIME},
			NICKNAME = #{NICKNAME},
			CTYPE = #{CTYPE},
			ONLINE_TYPE = #{ONLINE_TYPE},
			CHANNEL = #{CHANNEL},
			LOGIN_TIME = #{LOGIN_TIME},
			ACCESS_TOKEN = #{ACCESS_TOKEN},
		APPUSERLOGININFO_ID = APPUSERLOGININFO_ID
		where 
		APPUSERLOGININFO_ID = #{APPUSERLOGININFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			APPUSERLOGININFO_ID = #{APPUSERLOGININFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			APPUSERLOGININFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<insert id="insertLoginLog" parameterType="com.fh.entity.system.AppuserLogin">
		insert into
		<include refid="tableName"/>
		(
		LOGIN_PHONE_TYPE,
		LOGIN_IP,
		USER_ID,
		LOGIN_TIME,
		APPUSERLOGININFO_ID,
		ONLINE_TYPE,
		NICKNAME,
		CTYPE,
		CHANNEL,
		ACCESS_TOKEN

		) values (
		#{LOGIN_PHONE_TYPE},
		#{LOGIN_IP},
		#{USER_ID},
		now(),
		#{APPUSERLOGININFO_ID},
		#{ONLINE_TYPE},
		#{NICKNAME},
		#{CTYPE},
		#{CHANNEL},
		#{ACCESS_TOKEN}

		)
	</insert>


	<!-- 修改 -->
	<update id="editAppUserLoginLog" parameterType="java.lang.String">
		update
		<include refid="tableName"></include>
		set
			ONLINE_TYPE = '0',
			LOGOUT_TIME=now()
		where
		USER_ID = #{userId}
		AND ONLINE_TYPE = '1'
	</update>
</mapper>