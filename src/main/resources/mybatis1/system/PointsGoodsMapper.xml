<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PointsGoodsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_POINTSGOODS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		GOODSNUM,	
		GOODSNAME,	
		IMGURL,	
		POINTS,	
		TYPE,	
		POINTSGOODS_ID,
		IMGURL_GOODSDETAIL_TOP,
		IMGURL_GOODSDETAIL_MID,
		ORIGINALVALUEOFGOODS,
		SHOWTAG
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{GOODSNUM},	
		#{GOODSNAME},	
		#{IMGURL},	
		#{POINTS},	
		#{TYPE},	
		#{POINTSGOODS_ID},
		#{IMGURL_GOODSDETAIL_TOP},
		#{IMGURL_GOODSDETAIL_MID},
		#{ORIGINALVALUEOFGOODS},
		#{SHOWTAG}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			POINTSGOODS_ID = #{POINTSGOODS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			GOODSNUM = #{GOODSNUM},
			GOODSNAME = #{GOODSNAME},
			IMGURL = #{IMGURL},
			POINTS = #{POINTS},
			TYPE = #{TYPE},
		IMGURL_GOODSDETAIL_TOP = #{IMGURL_GOODSDETAIL_TOP},
		IMGURL_GOODSDETAIL_MID = #{IMGURL_GOODSDETAIL_MID},
		SHOWTAG = #{SHOWTAG},
		ORIGINALVALUEOFGOODS = #{ORIGINALVALUEOFGOODS}
		where 
		POINTSGOODS_ID = #{POINTSGOODS_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			POINTSGOODS_ID = #{POINTSGOODS_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>

	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			POINTSGOODS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<select id="getById" parameterType="String" resultType="com.fh.entity.system.PointsGoods">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		POINTSGOODS_ID = #{POINTSGOODS_ID}
	</select>

</mapper>