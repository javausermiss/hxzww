<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserRecRedPinfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_USERRECREDPINFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		REDPACKAGE_ID,	
		REDUSERID,	
		USERID,	
		GOLD,	
		CREATETIME,	
		USERRECREDPINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{REDPACKAGE_ID},	
		#{REDUSERID},	
		#{USERID},	
		#{GOLD},	
		#{CREATETIME},	
		#{USERRECREDPINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			USERRECREDPINFO_ID = #{USERRECREDPINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			REDPACKAGE_ID = #{REDPACKAGE_ID},
			REDUSERID = #{REDUSERID},
			USERID = #{USERID},
			GOLD = #{GOLD},
			CREATETIME = #{CREATETIME},
		USERRECREDPINFO_ID = USERRECREDPINFO_ID
		where 
		USERRECREDPINFO_ID = #{USERRECREDPINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			USERRECREDPINFO_ID = #{USERRECREDPINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			USERRECREDPINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<insert id="reg" parameterType="com.fh.entity.system.UserRecRedPInfo">

		insert into
		<include refid="tableName"></include>
		(
		REDPACKAGE_ID,
		REDUSERID,
		USERID,
		GOLD,
		CREATETIME,
		USERRECREDPINFO_ID
		) values (
		#{REDPACKAGE_ID},
		#{REDUSERID},
		#{USERID},
		#{GOLD},
		now(),
		#{USERRECREDPINFO_ID}
		)

	</insert>

	<select id="find" parameterType="com.fh.entity.system.UserRecRedPInfo" resultType="com.fh.entity.system.UserRecRedPInfo">
		select * from
		<include refid="tableName"/>
		where
		REDUSERID = #{REDUSERID}
		and
		USERID = #{USERID}
		and
		REDUSERID = #{REDUSERID}
	</select>
</mapper>