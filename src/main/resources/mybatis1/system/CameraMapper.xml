<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CameraMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_DEVICE_CAMERA
	</sql>
	<sql id="gatewayTableName">
        SYS_APP_DOLL
    </sql>
	<!-- 字段 -->
	<sql id="Field">
		CAMERA_ID,
		DOLL_ID,	
		CAMERA_NAME,	
		CAMERA_NUM,	
		RTMP_URL,
		H5_URL,
		SERVER_NAME,	
		LIVESTREAM,	
		SERVER_ID,
		CLIENT_ID,
		DEVICE_STATE,
		CAMERA_TYPE,
		CREATE_DATE,	
		UPDATE_DATE,	
		LOCK_VERSION
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
	    #{CAMERA_ID},	
		#{DOLL_ID},	
		#{CAMERA_NAME},	
		#{CAMERA_NUM},	
		#{RTMP_URL},
		#{H5_URL},
		#{SERVER_NAME},	
		#{LIVESTREAM},	
		#{SERVER_ID},
		#{CLIENT_ID},
		#{DEVICE_STATE},
		#{CAMERA_TYPE},
		now(),	
		now(),	
		0
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CAMERA_ID = #{CAMERA_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			<if test="DOLL_ID != null and DOLL_ID != ''">
				DOLL_ID = #{DOLL_ID},
			</if>
			<if test="CAMERA_NAME != null and CAMERA_NAME != ''">
				CAMERA_NAME = #{CAMERA_NAME},
			</if>
			<if test="CAMERA_NUM != null and CAMERA_NUM != ''">
				CAMERA_NUM = #{CAMERA_NUM},
			</if>
			<if test="RTMP_URL != null and RTMP_URL != ''">
				RTMP_URL = #{RTMP_URL},
			</if>
			<if test="H5_URL != null and H5_URL != ''">
				H5_URL = #{H5_URL},
			</if>
			<if test="SERVER_NAME != null and SERVER_NAME != ''">
				SERVER_NAME = #{SERVER_NAME},
			</if>
			<if test="LIVESTREAM != null and LIVESTREAM != ''">
				LIVESTREAM = #{LIVESTREAM},	
			</if>
			<if test="SERVER_ID != null and SERVER_ID != ''">
				SERVER_ID = #{SERVER_ID},
			</if>
			
			<if test="CLIENT_ID != null and CLIENT_ID != ''">
				CLIENT_ID =#{CLIENT_ID},
			</if>
			
			<if test="DEVICE_STATE != null and DEVICE_STATE != ''">
				DEVICE_STATE=#{DEVICE_STATE},
			</if>
			
			<if test="CAMERA_TYPE != null and CAMERA_TYPE != ''">
				CAMERA_TYPE=#{CAMERA_TYPE},
			</if>
			UPDATE_DATE = now(),
			LOCK_VERSION = LOCK_VERSION+1
		where
		CAMERA_ID = #{CAMERA_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			CAMERA_ID = #{CAMERA_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="pd" resultType="pd">
		select
		    c.CAMERA_ID,
			c.DOLL_ID,	
			c.CAMERA_NAME,	
			c.CAMERA_NUM,	
			c.RTMP_URL,
			c.H5_URL,
			c.SERVER_NAME,	
			c.LIVESTREAM,	
			c.SERVER_ID,
			c.CLIENT_ID,
			c.DEVICE_STATE,
			c.CAMERA_TYPE,
			d.DOLL_NAME,
			d.DOLL_SN,
			d.ROOM_ID,
			d.DOLL_STATE,
			d.DOLL_TYPE
		FROM 
		
		TB_DEVICE_CAMERA c LEFT JOIN SYS_APP_DOLL d on d.DOLL_ID=c.DOLL_ID

		where 1=1
		
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and (
				d.DOLL_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or 
				d.DOLL_SN LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				d.ROOM_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or 
				c.LIVESTREAM LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')  
				)
        </if>
		<if test="pd.RELEASE_STATUS != null and pd.RELEASE_STATUS != ''"><!-- 状态检索 -->
            and d.RELEASE_STATUS = #{pd.RELEASE_STATUS}
        </if>
        <if test="pd.DOLL_TYPE != null and pd.DOLL_TYPE != ''"><!-- 状态检索 -->
           AND	(d.DOLL_TYPE='ALL' or d.DOLL_TYPE =#{pd.DOLL_TYPE} )
        </if>                                 
		<if test="pd.DEVICE_STATE != null and pd.DEVICE_STATE != ''"><!-- 状态检索 -->
            and c.DEVICE_STATE = #{pd.DEVICE_STATE}
        </if>
        
       order by d.DOLL_ID
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CAMERA_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过ID获取数据 -->
	<select id="findByLiveStream" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			LIVESTREAM = #{LIVESTREAM}
	</select>
</mapper>