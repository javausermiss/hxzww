<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CameraMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_DEVICE_CAMERA
	</sql>
	<sql id="gatewayTableName">
        SYS_APP_DOLL
    </sql>
	<!-- 字段 -->
	<sql id="Field">
		CAMERA_ID,
		DOLL_ID,	
		CAMERA_NAME,	
		CAMERA_NUM,	
		RTMP_URL,	
		SERVER_NAME,	
		LIVESTREAM,	
		SERVER_ID,
		CLIENT_ID,
		DEVICE_STATE,
		CAMERA_TYPE,
		CREATE_DATE,	
		UPDATE_DATE,	
		LOCK_VERSION
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
	    #{CAMERA_ID},	
		#{DOLL_ID},	
		#{CAMERA_NAME},	
		#{CAMERA_NUM},	
		#{RTMP_URL},	
		#{SERVER_NAME},	
		#{LIVESTREAM},	
		#{SERVER_ID},
		#{CLIENT_ID},
		#{DEVICE_STATE},
		#{CAMERA_TYPE},
		now(),	
		now(),	
		0
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CAMERA_ID = #{CAMERA_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DOLL_ID = #{DOLL_ID},
			CAMERA_NAME = #{CAMERA_NAME},
			CAMERA_NUM = #{CAMERA_NUM},
			RTMP_URL = #{RTMP_URL},
			SERVER_NAME = #{SERVER_NAME},
			LIVESTREAM = #{LIVESTREAM},	
			SERVER_ID = #{SERVER_ID},
			CLIENT_ID =#{CLIENT_ID},
			DEVICE_STATE=#{DEVICE_STATE},
			CAMERA_TYPE=#{CAMERA_TYPE},
			UPDATE_DATE = now(),
			LOCK_VERSION = LOCK_VERSION+1
		where 
		CAMERA_ID = #{CAMERA_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			CAMERA_ID = #{CAMERA_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="pd" resultType="pd">
		select
		    c.CAMERA_ID,
			c.DOLL_ID,	
			c.CAMERA_NAME,	
			c.CAMERA_NUM,	
			c.RTMP_URL,	
			c.SERVER_NAME,	
			c.LIVESTREAM,	
			c.SERVER_ID,
			c.CLIENT_ID,
			c.DEVICE_STATE,
			c.CAMERA_TYPE,
			d.DOLL_NAME
		FROM 
		
		TB_DEVICE_CAMERA c LEFT JOIN SYS_APP_DOLL d on d.DOLL_ID=c.DOLL_ID

		where d.RELEASE_STATUS ='1'
		
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and d.DOLL_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
		</if>
		
		<if test="pd.DEVICE_STATE != null and pd.DEVICE_STATE != ''"><!-- 状态检索 -->
            and c.DEVICE_STATE = #{pd.DEVICE_STATE}
        </if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CAMERA_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过ID获取数据 -->
	<select id="findByLiveStream" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			LIVESTREAM = #{LIVESTREAM}
	</select>
</mapper>